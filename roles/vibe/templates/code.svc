# {{ ansible_managed }}
[Unit]
Description=code-server
Documentation=https://github.com/coder/code-server
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User={{ node_user }}
Group={{ node_user }}
WorkingDirectory={{ vibe_data }}
EnvironmentFile=-/etc/default/code
ExecStart=/usr/bin/code-server --bind-addr 127.0.0.1:{{ code_port }} --user-data-dir {{ code_data }} {{ vibe_data }}
Restart=always
RestartSec=5
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
