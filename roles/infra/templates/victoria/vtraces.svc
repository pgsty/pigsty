# -*- mode: conf -*-

[Unit]
Description=VictoriaTraces - high-performance distributed tracing backend
Documentation=https://docs.victoriametrics.com/victorialogs/
After=network.target

[Service]
User=victoria
EnvironmentFile=-/etc/default/vtraces
ExecStart=/usr/bin/victoria-traces $VTRACES_OPTS
ExecReload=/bin/kill -HUP $MAINPID
TimeoutSec=120
TimeoutStopSec=120
Restart=on-failure
RestartSec=5
LimitNOFILE=2097152
OOMScoreAdjust=-1000

[Install]
WantedBy=multi-user.target
