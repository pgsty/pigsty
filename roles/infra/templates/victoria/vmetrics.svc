# -*- mode: conf -*-

[Unit]
Description=VictoriaMetrics - high-performance time series database
Documentation=https://docs.victoriametrics.com/single-server-victoriametrics/
After=network.target

[Service]
User=victoria
EnvironmentFile=-/etc/default/vmetrics
ExecStart=/usr/bin/victoria-metrics $VMETRICS_OPTS
ExecReload=/bin/kill -HUP $MAINPID
TimeoutSec=120
TimeoutStopSec=120
Restart=on-failure
RestartSec=5
LimitNOFILE=16777216
OOMScoreAdjust=-1000

[Install]
WantedBy=multi-user.target
