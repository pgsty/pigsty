# Show VictoriaMetrics service status

echo "=== VictoriaMetrics Status ==="
systemctl status vmetrics --no-pager

echo ""
echo "=== VMAlert Status ==="
systemctl status vmalert --no-pager 2>/dev/null || echo "vmalert not enabled"

echo ""
echo "=== Processes ==="
ps aux | grep -E 'victoria-metrics|vmalert' | grep -v grep
