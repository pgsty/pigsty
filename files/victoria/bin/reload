# Reload VictoriaMetrics configuration

# reload vmetrics (send SIGHUP to reload scrape config)
systemctl reload vmetrics

# reload vmalert (send SIGHUP to reload alert rules)
systemctl reload vmalert 2>/dev/null || true

echo "vmetrics & vmalert reloaded"